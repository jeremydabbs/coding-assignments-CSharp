@{
    ViewData["Title"] = "Home Page";
}
@model List<Dish>

<div class="text-center">
    <h3 class="display-5"><a asp-action="Index" asp-controller="Home">Chefs</a> | Dishes</h3>
</div>
<a asp-action="NewDish" asp-controller="Home">Add a Dish</a>

<h2>Yum, take a look at our tasty dishes!</h2>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Chef</th>
            <th>Tastiness</th>
            <th>Calories</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var d in @ViewBag.AllDishes)
        {
            <tr>
                <td>@d.Name</td>
                <td>@d.Creator.FirstName @d.Creator.LastName</td>
                <td>@d.Tastiness</td>
                <td>@d.Calories</td>
            </tr>
        }
    </tbody>
</table>
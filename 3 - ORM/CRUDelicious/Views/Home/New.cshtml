@model Dish
<h1>Add a new Dish!</h1>
<a href="/">Home</a>

<form class="col-5" asp-action="AddDish" asp-controller="Home" method="post">
    <div class="form-group">
        <span asp-validation-for="Chef"></span>
        <label asp-for="Chef"></label>
        <input asp-for="Chef" class="form-control">
    </div>
    <div class="form-group">
        <span asp-validation-for="Name"></span>
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control">
    </div>
    <div class="form-group">
        <span asp-validation-for="Calories"></span>
        <label asp-for="Calories"></label>
        <input asp-for="Calories" class="form-control">
    </div>
    <div class="form-group">
        <span asp-validation-for="Tastiness"></span>
        <label asp-for="Tastiness"></label>
        <input asp-for="Tastiness" class="form-control">
    </div>
    <div class="form-group">
        <span asp-validation-for="Description"></span>
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <input type="submit" value="Add Dish" class="btn btn-outline-success">
    </div>
</form>
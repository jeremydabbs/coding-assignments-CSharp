@model Wedding

<div class="text-right">
    <p class="list-inline-item"><a asp-action="Index" asp-controller="Wedding">Back to Weddings</a></p>
    <p class="list-inline-item"><a asp-action="Logout" asp-controller="Home">Logout</a></p>
</div>

<h3>Plan A Wedding</h3>
<!--<div class="row justify-content-around"> -->
<div class="col-5">
    <form asp-action="AddWedding" asp-controller="Wedding" method="POST">
        <input type="hidden" asp-for="UserId" value="@ViewBag.User.UserId">
        <div class="form-group">
            <span asp-validation-for="WedderOne"></span>
            <label asp-for="WedderOne"></label>
            <input asp-for="WedderOne" class="form-control">
        </div>

        <div class="form-group">
            <span asp-validation-for="WedderTwo"></span>
            <label asp-for="WedderTwo"></label>
            <input asp-for="WedderTwo" class="form-control">
        </div>

        <div class="form-group">
            <span asp-validation-for="Date"></span>
            <label asp-for="Date"></label>
            <input asp-for="Date" class="form-control">
        </div>

        <div class="form-group">
            <span asp-validation-for="Address"></span>
            <label asp-for="Address"></label>
            <input asp-for="Address" class="form-control">
        </div>

        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-outline-success">
        </div>
    </form>
</div>